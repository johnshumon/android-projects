<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:columnCount="2">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="150dp"
        android:layout_height="450dp"
        android:layout_row="0"
        android:layout_column="0"
        android:id="@+id/linearPos1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rectangle1"
            android:background="#ff5c89ff"
            android:layout_weight="1"
            android:layout_marginBottom="@dimen/custom_padding_bottom" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rectangle2"
            android:background="#ffee53ff"
            android:layout_weight="1"
            android:layout_marginBottom="@dimen/custom_padding_bottom" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="200dp"
        android:layout_height="450dp"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_alignRight="@+id/linearPos1"
        android:id="@+id/linearPos2"

        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rectangle3"
            android:layout_weight="1"
            android:background="#ffff0723"
            android:layout_marginBottom="@dimen/custom_padding_bottom"
            android:layout_marginLeft="@dimen/custom_padding_bottom" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rectangle4"
            android:layout_weight="1"
            android:background="#fff2ebff"
            android:layout_marginLeft="@dimen/custom_padding_bottom"
            android:layout_marginBottom="@dimen/custom_padding_bottom" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rectangle5"
            android:background="#ff4b04ff"
            android:layout_weight="1"
            android:layout_marginBottom="@dimen/custom_padding_bottom"
            android:layout_marginLeft="@dimen/custom_padding_bottom" />
    </LinearLayout>

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/customSeekBar"
        android:layout_row="1"
        android:layout_column="0"
        android:max="100"
        android:progress="0"
        android:layout_columnSpan="2" />
</GridLayout>


